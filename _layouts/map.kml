{%- assign engines = site.engines | where: "type", page.engine_type | sort: "title" -%}
{%- capture styleid %}icon-{{ page.engine_type }}-nodesc{% endcapture -%}

<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>{{ page.title }}</name>
    <Style id="{{ styleid }}-normal">
      <IconStyle>
	<color>{{ page.mapcolor }}</color>
        <scale>1</scale>
        <Icon>
          <href>https://www.gstatic.com/mapspro/images/stock/503-wht-blank_maps.png</href>
        </Icon>
        <hotSpot x="32" xunits="pixels" y="64" yunits="insetPixels"/>
      </IconStyle>
      <LabelStyle>
        <scale>0</scale>
      </LabelStyle>
      <BalloonStyle>
        <text><![CDATA[<h3>$[name]</h3>]]></text>
      </BalloonStyle>
    </Style>
    <Style id="{{ styleid }}-highlight">
      <IconStyle>
	<color>{{ page.mapcolor }}</color>
        <scale>1</scale>
        <Icon>
          <href>https://www.gstatic.com/mapspro/images/stock/503-wht-blank_maps.png</href>
        </Icon>
        <hotSpot x="32" xunits="pixels" y="64" yunits="insetPixels"/>
      </IconStyle>
      <LabelStyle>
        <scale>1</scale>
      </LabelStyle>
      <BalloonStyle>
        <text><![CDATA[<h3>$[name]</h3>]]></text>
      </BalloonStyle>
    </Style>
    <StyleMap id="{{ styleid }}">
      <Pair>
        <key>normal</key>
        <styleUrl>#{{ styleid }}-normal</styleUrl>
      </Pair>
      <Pair>
        <key>highlight</key>
        <styleUrl>#{{ styleid }}-highlight</styleUrl>
      </Pair>
    </StyleMap>
{%- for engine in engines -%}
{% if engine.lat and engine.lon %}
    <Placemark>
      <name>{{ engine.title | escape }}</name>
      <styleUrl>#{{ styleid }}</styleUrl>
      <Point>
        <coordinates>
          {{ engine.lon }},{{ engine.lat }},0
        </coordinates>
      </Point>
    </Placemark>
  {%- endif -%}
{%- endfor %}
  </Document>
</kml>
